@import "nib"


body
	

	a
		color #000

#content
	margin 0 auto
	width 900px

	h1
		font 4em "Days One"

		a
			color black
			text-decoration none

	h2
		margin-top -25px

	#left
		float left
		width 600px
		box-sizing border-box
		font 14px Arial, Helvetica

		textarea
			width 580px
			height 300px

	#right
		float right
		width 300px
		box-sizing border-box
		font 14px Arial, Helvetica

		.pure-button-success
			background rgb(28, 184, 65)

		.category-button
			margin-bottom	10px
			font-size 120% !important

			.standardize-width
				width 300px


	#confirm
		font-size 12px
		clear both
		color black
		margin-top 30px

	#submit
		box-sizing border-box
		margin-top 15px

		button
			width 200px
			height 40px


#top-buttons
	position absolute
	right 100px
	top 0
	z-index 30
	box-sizing border-box

	a
		color white
		text-decoration none

	ul
		margin 2px 0 0 0

	li.lil-button
		display: inline
		background-color red
		color white
		padding 5px 5px 5px 5px
		font-size 12px

	li.first
		border-right 1px solid white



#footer
	height 30px
	color #fff
	background-color #000
	opacity 0.7
	bottom 0
	position absolute
	width 100%
	z-index 20
	clear both
	box-sizing border-box

	a
		color #fff


	p
		padding-top 5px
		float right
		font 16px "Architects Daughter"
		margin-right 10px

		.upper
			text-transform uppercase

